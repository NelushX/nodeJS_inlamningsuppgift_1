<%- include("header.ejs") %>

<body>
    <main>
        <div>
            <a href="/?sort=1"><i class="fas fa-sort-alpha-up fa-2x" id="sort">&nbsp</i></a>
            <a href="/?sort=-1"><i class="fas fa-sort-alpha-down-alt fa-2x" id="sort">&nbsp</i></a>
        </div>

        <div>
            <% findTodo.forEach( (todo) => { %>
                <ul>
                    <li>
                        <span><%= todo.text %></span>
                        <a href="/update/<%= todo._id %>"><i class="far fa-edit" id="update"></i></a>
                        <a href="/delete/<%= todo._id %>"><i class="far fa-trash-alt" id="delete"></i></a>
                    </li>
                </ul>
            <% }); %>
        </div>

        <div>
            <form method="POST">
                <input type="text" name="text" placeholder="What do you want to add?" required>
                <button type="submit" class="btn-input">Add</button>
            </form>
        </div>

        <div>
            <a class="btn" href="/?page=1">1</a>
            <a class="btn" href="/?page=2">2</a>
        </div>
    </main>
</body>